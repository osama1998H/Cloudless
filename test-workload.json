{
  "workload": {
    "name": "nginx-test",
    "namespace": "default",
    "spec": {
      "image": "nginx:alpine",
      "replicas": 1,
      "resources": {
        "requests": {
          "cpu_millicores": 100,
          "memory_bytes": 134217728
        },
        "limits": {
          "cpu_millicores": 500,
          "memory_bytes": 268435456
        }
      },
      "ports": [
        {
          "name": "http",
          "container_port": 80,
          "protocol": "TCP"
        }
      ],
      "restart_policy": {
        "policy": 0
      }
    },
    "labels": {
      "app": "nginx",
      "env": "test"
    }
  }
}
